<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="main">
      <h1>URL Shortener</h1>
      <% if (locals.id){ %> <!--all the data from backend is stored in locals-->
     <p>URL Generated: <a href="http://localhost:8001/<%=id%>" target="_blank">http://localhost:8001/<%=id%></a></p>
      <% } %>
      <div>
        <form method="POST" action="/url">
          <!--action tells on which route we have to post-->
          <label> Enter your original url </label>
          <input
            type="text"
            name="url"
            placeholder="https://example.com"
          /><br /><br />
          <button type="submit" id="button">Generate URL</button>
        </form>
      </div>
      <br />
      <div>
        <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S.no</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach(function(url, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <% } %>
      </div>
    </div>
  </body>
</html>
